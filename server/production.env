# Production Environment Variables
NODE_ENV=production
PORT=4000

# MongoDB Connection String (Replace with your production MongoDB URI)
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/sk_production

# JWT Secret (Replace with a strong secret)
JWT_SECRET=your_super_strong_jwt_secret_key_here_change_this_in_production

# CORS Origins (Replace with your production domain)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# File Upload Path
UPLOAD_PATH=./uploads

# Cookie Settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
